.newsletter
    height: 120px
    margin-top: 80px
    background: #FAFAFA;
    border-top 2px solid #EFEFEF;
    border-bottom 2px solid #EFEFEF;

    form
        height: 120px
        width 100%
        display flex
        align-items: center
        justify-content: center

    label
        color #000
        font-style: normal;
        font-weight: 700;
        font-size: 24px;
        margin-right: 15px

    button
        width: 131px;
        height: 40px;
        background: #FAA500;
        border: 1px solid #FAA500;
        border-radius: 4px;
        border-top-left-radius: 0
        border-bottom-left-radius: 0
        color #fff
        font-style: normal;
        font-weight: 700;
        font-size: 16px;
        &:hover
            background-color: #fff
            color #FAA500;
            border-color: #FAA500;

    input
        outline: 0
        border: 1px solid #353535;
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
        border-right: 0
        width: calc(630px - 131px)
        height: 40px
        padding 0 24px

        &, &::placeholder
            font-style: normal;
            font-weight: 400;
            font-size: 14px;
            color: #353535;