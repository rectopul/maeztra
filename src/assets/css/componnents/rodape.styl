.rodape
    background: #353535;
    height: 85px
    display: flex
    align-items: center

    .socials,
    .cards,
    .developers
        display: flex
        align-items: center

    .developers
        justify-content: flex-end

    .cards
        justify-content: center

    figure
        display: inline-block
        margin 0 11px
        

    a
        display: flex
        margin-right: 25px
        transition: all .3s linear

        &:hover
            transform: translateY(-5px)
