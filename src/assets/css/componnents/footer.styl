.footer-links
    padding-top: 80px
    background: #FAFAFA;

    ul
        font-style: normal;
        font-weight: 400;
        font-size: 12px;
        list-style: none
        display flex
        flex-direction: column
        padding 0

        li
            margin-bottom: 25px

            &:first-child
                font-style: normal;
                font-weight: 700;
                font-size: 16px;

        a
            color: #000000;
            text-decoration: none

            &:hover
                color  #FAA500;