.rullerConditions 
    h2, 
    / .rullerMarks h1
        font-style: normal;
        font-weight: 700;
        font-size: 16px;
        line-height: 24px;
        text-align: center;
        color: #353535;
        display block
        margin 21px 0
        width 100%


.rullerMarks h1
    margin-top 74px
    font-weight: 700;
    font-size: 32px;
    font-family: 'Titillium Web'

.conditionsContainer
    display flex
    justify-content: center
    align-items: center
    overflow: hidden

    .condition
        flex 0 0 calc(19% - 7.5px)
        background: #EFEFEF
        display flex
        margin 0 7.5px
        padding 16px 25px
        height: 64px
        border-radius: 4px;

        figure
            margin-right: 22px

        article
            font-weight: 400;
            font-size: 12px;
            line-height: 18px;
            color: #000000;
            height: 100%
            display flex
            flex-direction: column
            white-space: nowrap;
            

            h3
                font-weight: 700;
                font-size: 14px;
                line-height: 21px;
                margin 0


// Marcas

.rullerMarksContainer 
    display: flex
    justify-content: space-between
    align-items: center

    @media screen and (max-width 1023px)
        padding 0 15px !important

    .marca
        flex: 0 0 calc(20% - 8px)
        height: 64px
        text-align: center

        img
            height: 100%
            @media screen and (max-width 1023px)
                width 100%
                height: auto