.header__account

    display flex
    align-items: center
    justify-content: center
    padding 10px 15px
    width: 100%
    display: none

    @media screen and (min-width 1024px)
        padding 0
        padding-left: 130px
        display flex

    .cart
        border: 1px solid #FAA500;
        border-radius: 8px;
        display: flex
        justify-content: center
        align-items: center
        padding 12px 14px

    > div
        display flex
        align-items: center
        margin 0 20px

        img 
            transition: all .3s linear

        &:hover 
            img
                transform translateY(-5px)

    a
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        color: #353535;
        white-space: nowrap
        display flex
        align-items: center
        text-decoration: none
        margin-left: 8px

.linksMobile
    display flex
    flex-direction: column
    padding: 20px
    border-bottom: 1px solid #ccc
    width: 100%

    .close-container
        position absolute
        top 10px
        right 10px

    .closeMenu
        width 35px
        height: 35px
        position: relative
        margin-left: auto

        &:before
            content ''
            width: 100%
            height: 2px
            display: block
            background-color: #ccc
            position: absolute
            transform: rotate(50deg)

        &:after
            content ''
            width: 100%
            height: 2px
            background-color: #ccc
            display block
            transform: rotate(-50deg)


    > div
        display flex
        justify-content: flex-start
        align-items: center
        height: 45px

    a
        font-style: normal;
        font-weight: 400;
        font-size: 14px;
        color: #353535;
        white-space: nowrap
        display flex
        align-items: center
        text-decoration: none
        margin-left: 8px

    @media screen and (min-width 1024px)
        display: none

.categories.container
    @media screen and (max-width 1023px)
        position: fixed
        width 100%
        height: 100%
        background-color: #fff
        z-index 9
        top: 0
        left: 0
        display none

        ul
            flex-direction: column
            justify-content: flex-start
            height: initial
            align-items: flex-start
            padding: 20px

            li
                flex: 0 0 40px